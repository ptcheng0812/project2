<style>
.modal-body {
  font-family: Arial, Helvetica, sans-serif;
  display: grid;
  place-items: center;
  min-height: 100vh;
}

.container {

  position: relative;
  display: grid;
  grid-template-columns: 300px 600px;
  box-shadow: 0 15px 20px rgba(0, 0, 0, 0.356);
}

img {
  width: 300px;
  height: 300px;
}
.close-btn {
  position: absolute;
  bottom: -20px;
  right: -20px;
  border: none;
  outline: none;
  display: flex;
  align-items: center;
  background-color: #fc9400;
  padding: 22px 45px;
  font-size: 1rem;
  text-transform: uppercase;
  cursor: pointer;
  box-shadow: 0 10px 20px rgba(0, 0, 0, 0.294);
}
.container-text {
  padding: 40px 40px 0;
}

h1 {
    font-weight: 400;
  }

p {
  font-size: 0.9rem;
}

.container-text-child {
  display: flex;
  margin: 20px 0 10px;
}

.container-text-child-elem {
    margin-right: 40px;
}

h2 {
  margin-bottom: 5px;
  font-size: 1rem;
  font-weight: 400;
  color: #818189;
}

p {
  font-weight: bold;
  font-size: 1.2rem;
}
</style>

<div  class="modal-header">
  <h5 class="modal-title">Own Property Created</h5>
  <button type="button" class="close" data-dismiss="modal"><span>&times;</span></button>
</div>
<div class="modal-body">
  <div class="container text-center">
    <div class="container-text">
      <h2>Name: <%= property.name %></h2>
      <h2>Type: <%= property.type %></h2>
      <p>Address: <%= property.address %></p>
      <div class="container-text-child">
        <div class="container-text-child-elem">
          <h2>Price: $ <%= property.price %></h2>
        </div>
        <div class="container-text-child-elem">
          <h2>Year: <%= property.year %></h2>
        </div>
        <div class="container-text-child-elem">
          <h2>Area: <%= property.area %> square foot</h2>
        </div>
        <div class="container-text-child-elem">
          <h2>Room Number: <%= property.roomNumber %></h2>
        </div>
      </div>
      <div class="container-text">
        <h2><%= property.description %></h2>
      </div>
      <div id="carouselExampleFade" class="carousel slide carousel-fade"   data-ride="carousel">
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img  id="propert-imageOne-view"
                class="d-block w-100"
                src="<%= property.imageOne %>"
                alt="imageOne"
                style="width: 300px; height: auto;"
          >
        </div>
        <div class="carousel-item">
          <img  id="propert-imageTwo-view"
                class="d-block w-100"
                src="<%= property.imageTwo %>"
                alt="imageTwo"
                style="width: 300px; height: auto;"
          >
        </div>
        <div class="carousel-item">
          <img  id="propert-imageThree-view"
                class="d-block w-100"
                src="<%= property.imageThree %>"
                alt="imageThree"
                style="width: 300px; height: auto;"
          >
        </div>
        <div class="carousel-item">
          <img  id="propert-imageFour-view"
                class="d-block w-100"
                src="<%= property.imageFour %>"
                alt="imageFour"
                style="width: 300px; height: auto;"
          >
        </div>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleFade" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleFade" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
      </div>
      <h3>Posted At: <%= moment(property.createdAt).format('YYYY/MM/DD') %></h3>
    </div>
  </div>
</div>
<div class="modal-footer">
  <button type="button" class="close-btn btn-warning" data-dismiss="modal">Close</button>
</div>
